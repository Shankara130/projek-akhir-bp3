<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".EduNovelApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduNovel"
        tools:targetApi="31">

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- SPLASH ACTIVITY (LAUNCHER) -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EduNovel.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- AUTHENTICATION ACTIVITIES -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.auth.login.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.auth.register.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- MAIN ACTIVITY -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- CHARACTER MANAGEMENT ACTIVITIES -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.character.CharacterListActivity"
            android:exported="false"
            android:label="@string/my_characters"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.character.CreateCharacterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- STORY MODE ACTIVITIES -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.story.ChapterSelectionActivity"
            android:exported="false"
            android:label="Select Chapter"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.story.StoryModeActivity"
            android:exported="false"
            android:label="@string/story_mode"
            android:screenOrientation="portrait" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- QUIZ ACTIVITIES -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.quiz.QuizSelectionActivity"
            android:exported="false"
            android:label="@string/quiz_challenge"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.quiz.QuizActivity"
            android:exported="false"
            android:label="Quiz"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.quiz.QuizResultActivity"
            android:exported="false"
            android:label="Quiz Result"
            android:screenOrientation="portrait" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- PROGRESS ACTIVITY -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.progress.ProgressActivity"
            android:exported="false"
            android:label="@string/my_progress"
            android:screenOrientation="portrait" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- HIGH SCORE ACTIVITY -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.highscore.HighScoreActivity"
            android:exported="false"
            android:label="@string/high_scores"
            android:screenOrientation="portrait" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- ABOUT ACTIVITY -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <activity
            android:name=".presentation.about.AboutActivity"
            android:exported="false"
            android:label="@string/about"
            android:screenOrientation="portrait" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- FILE PROVIDER (For Image Selection) -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>